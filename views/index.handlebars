<div class="container">
  <div class="row">
    <div class="col-lg-4">
      <div class="panel">
        <h4>Burgers You Can Devour!</h4>
        <ul>
          {{#each burgers}} {{#unless devoured}} {{> burgers/burger-block devoured=true}} {{/unless}} {{/each}}
        </ul>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="row">
        <div class="col-lg-2"></div>
        <div class="col-lg-8">
          <div class="panel">
            <h4>Add a burger</h4>
            <form class="create-form">
              <div class="form-group">
                <label for="burg">Burger Name:</label>
                <input type="text" id="burg" name="burger_name">
              </div>
              <div class="form-group">
                <button type="submit" class="btn-primary">Add burger</button>
              </div>
            </form>
          </div>
        </div>
        <div class="col-lg-2"></div>
      </div>
    </div>
    <div class="col-lg-4">
      <div class="panel">
        <h4>Devoured Burgers!</h4>
        <ul>
          {{#each burgers}} {{#if devoured}} {{> burgers/burger-block devoured=false}} {{/if}} {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>